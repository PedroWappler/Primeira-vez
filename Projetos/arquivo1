<!DOCTYPE html>
<html>

<head>
    <title>Relatório de Produtos</title>
</head>

<body>
    <h1>Relatório de Produtos</h1>
    <button id="gerarRelatorio">Gerar Relatório</button>
    <div id="relatorioProdutos"></div>

    <script>
        const produtos = [
            { nome: "Produto 1", preco: 10.0 },
            { nome: "Produto 2", preco: 20.0 },
            { nome: "Produto 3", preco: 30.0 },
            // Adicione mais produtos conforme necessário
        ];

        const gerarRelatorioBtn = document.getElementById("gerarRelatorio");
        const relatorioProdutosDiv = document.getElementById("relatorioProdutos");

        gerarRelatorioBtn.addEventListener("click", () => {
            relatorioProdutosDiv.innerHTML = ""; // Limpa o conteúdo anterior

            for (let i = 0; i < produtos.length; i++) {
                const produto = produtos[i];
                const produtoInfo = `${produto.nome}: R$ ${produto.preco.toFixed(2)}`;
                const pElement = document.createElement("p");
                pElement.textContent = produtoInfo;
                relatorioProdutosDiv.appendChild(pElement);
            }
        });
    </script>
</body>

</html>